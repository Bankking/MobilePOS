<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Sale"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.25"
            android:text="Sale"
            android:textSize="12sp" />

        <Button
            android:id="@+id/inventory"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.25"
            android:text="Inventory"
            android:textSize="12sp" />

        <Button
            android:id="@+id/saleHistory"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.25"
            android:text="Sale-History"
            android:textSize="12sp" />

        <Button
            android:id="@+id/customer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.25"
            android:text="Customer"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Tinventory_ii_t_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BRAND"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/inventory_ii_t_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="50sp" />
             <TextView
                android:id="@+id/inventory_ii_t_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" />
              <TextView
                android:id="@+id/inventory_ii_t_qnty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="right"
                 android:orientation="horizontal" >

                 <Button
                     android:id="@+id/inventory_ii_b_back"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:text="Back"
                     android:textSize="15sp" />
              
              </LinearLayout>

        </LinearLayout>
         
    </LinearLayout>

</LinearLayout>