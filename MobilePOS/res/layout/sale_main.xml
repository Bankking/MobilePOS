<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/sale"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.25"
            android:text="Sale"
            android:textSize="12sp" />

        <Button
            android:id="@+id/inventory"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.25"
            android:text="Inventory"
            android:textSize="12sp" />

        <Button
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.25"
            android:text="Sale-History"
            android:textSize="12sp" />

        <Button
            android:id="@+id/customer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.25"
            android:text="Customer"
            android:textSize="12sp" />
    </LinearLayout>

    
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal" >

          <TextView
                   android:id="@+id/sale_main_t_cart"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Cart"
                   android:textAppearance="?android:attr/textAppearanceMedium" 
                    android:textSize="30sp"/>
       

             
    </LinearLayout>
    	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

     

          <TextView
                   android:id="@+id/sale_main_t_price_total"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Total Price :"
                   android:textAppearance="?android:attr/textAppearanceMedium" 
                    android:textSize="30sp"/>

           <TextView
               android:id="@+id/sale_main_t_price_total_cal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="xxx.-"
               android:textAppearance="?android:attr/textAppearanceMedium"
               
               android:textSize="30sp" />
             
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/sale_main_b_confirmsell"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1.14"
            android:text="Confirm Sell"
            android:textSize="12sp" />

        <Button
            android:id="@+id/sale_main_b_cancel"
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:layout_weight="0.07"
            android:text="Clear Cart"
            android:textSize="12sp" />

    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/sale_main_b_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.50"
            android:text="Add item to cart"
            android:textSize="12sp" />
    </LinearLayout>

    
     
      <LinearLayout
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/sale_main_itemlist"
            android:layout_width="match_parent"
            android:layout_height="328dp" >

        </ListView>
   

  
    </LinearLayout>
    

</LinearLayout>